<%- include('partials/header') %>

<main class="auth-container">
  <h2><i class="fas fa-unlock-alt"></i> Forgot Password</h2>

  <% if (error) { %>
    <div class="error"><i class="fas fa-exclamation-triangle"></i> <%= error %></div>
  <% } %>

  <% if (success) { %>
    <div class="success"><i class="fas fa-check-circle"></i> <%= success %></div>
  <% } %>

  <form action="/auth/forgot" method="POST">
    <label for="email"><i class="fas fa-envelope"></i> Email</label>
    <input type="email" name="email" required placeholder="Enter your registered email">

    <button type="submit"><i class="fas fa-paper-plane"></i> Send Reset Link</button>
  </form>

  <p><a href="/auth/login"><i class="fas fa-arrow-left"></i> Back to Login</a></p>
</main>

<%- include('partials/footer') %>

<%- include('partials/header') %>

<main class="auth-container">
  <h2><i class="fas fa-key"></i> Reset Password</h2>

  <% if (error) { %>
    <div class="error"><i class="fas fa-exclamation-triangle"></i> <%= error %></div>
  <% } %>

  <% if (success) { %>
    <div class="success"><i class="fas fa-check-circle"></i> <%= success %></div>
  <% } %>

  <form action="/auth/reset/<%= token %>" method="POST">
    <label for="password"><i class="fas fa-lock"></i> New Password</label>
    <input type="password" name="password" required placeholder="New password">

    <label for="confirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
    <input type="password" name="confirmPassword" required placeholder="Confirm password">

    <button type="submit"><i class="fas fa-sync-alt"></i> Reset Password</button>
  </form>

  <p><a href="/auth/login"><i class="fas fa-sign-in-alt"></i> Back to Login</a></p>
</main>

<%- include('partials/footer') %>

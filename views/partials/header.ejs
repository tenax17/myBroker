<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ProfitNest</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

<nav class="navbar">
  <div class="logo"><a href="/">ProfitNest</a></div>

  <div class="hamburger" onclick="toggleMenu()">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>

  <ul class="nav-links" id="navLinks">
    <% if (user) { %>
      <li><a href="/dashboard"><i class="fas fa-gauge"></i> Dashboard</a></li>
      <li><a href="/deposit"><i class="fas fa-circle-dollar-to-slot"></i> Deposit</a></li>
      <li><a href="/withdraw"><i class="fas fa-money-bill-transfer"></i> Withdraw</a></li>
      <li><a href="/change-password"><i class="fas fa-key"></i> Change Password</a></li>
      <% if (user.role === 'admin') { %>
        <li><a href="/admin/dashboard"><i class="fas fa-shield-halved"></i> Admin</a></li>
      <% } %>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    <% } else { %>
      <li><a href="/auth/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
      <li><a href="/auth/register"><i class="fas fa-user-plus"></i> Register</a></li>
    <% } %>
  </ul>

  <!-- Theme toggle button -->
</nav>

